<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/profileRootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 꾸미기"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btnChangeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 변경"
            android:backgroundTint="@color/orange"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/editNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="닉네임 입력"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테마 색상 선택"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/themeColorRed"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#D11222" />

            <ImageButton
                android:id="@+id/themeColorBlue"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#2196F3"
                android:layout_marginStart="16dp" />

            <ImageButton
                android:id="@+id/themeColorYellow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#FFEB3B"
                android:layout_marginStart="16dp" />

            <ImageButton
                android:id="@+id/themeColorOrange"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/orange"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장"
            android:layout_marginTop="32dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>